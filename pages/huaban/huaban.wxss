.canvas_area{
  border: 1px solid black;
  width: 99%;
  height: 1000rpx;
  position: absolute;
  top: 0;
}
.canvas_area .myCanvas{
  width: 100%;
  height: 100%;
} 
.canvas_tools{
  height: 150rpx;
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 150rpx;
}

.canvas_tools .box{
  width: 25%;
  height: 100%;
  border: 1px solid black;
}